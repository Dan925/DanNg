---
import NavBar from "../components/NavBar.astro"
import Footer from "../components/Footer.astro"

interface Props {
    title?:string;
}
const {title="Dan Ngendahayo"} = Astro.props as Props
---
<html>
<head>
    <meta charset="UTF-8" />
 <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
</head>
  <body>
  <NavBar/>
    <slot/>
  <Footer/>
  </body>
</html>
<style is:global>
@import url("https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;600;700&display=swap");
:root {
  --accent: #ed3434;
  --bgrd: #282c33;
  --bgrd-b: #16181c;
  --gray: #abb2bf;
  --font-fira: "Fira Code"
}
html {
  scroll-behavior: smooth;
  scroll-padding-top: 10em;
}
* {
  padding: 0;
  margin: 0;
  font-family: "Fira Code", "monospace";
}
li {
  list-style-type: none;
}
a {
  text-decoration: none;
  color: var(--gray);
}

a:hover,
a:active {
  color: white;
  cursor: pointer;
}
h1 {
  margin-bottom: 0.3em;
  font-size: 2.5em;
}

header a::before,
h1::before,
h5::before {
  content: "#";
  color: var(--accent);
}
body {
    height: 100vh;
    width: 100vw;
  background-color: var(--bgrd);
  color: white;
}

img {
object-fit: none;
}
</style>






