        <section class="education">
          <span class="heading">
            <h2 class="text-2xl">Education</h2>
          </span>
          <div class="section-content">
            <h3>BASc in Software Engineering</h3>
            <h4>University of Ottawa</h4>
            <span class="time">
              <p>09/2019-Present</p>
              <p>Ottawa, Ontario</p>
            </span>
          </div>
        </section>

        <section class="work">
          <span class="heading">
            <h2 class="text-2xl">Work Experience</h2>
          </span>
