---
import { Image } from "@astrojs/image/components";
---

<section
    id="hero"
    class="relative flex w-full h-[40rem] flex-wrap gap-4 justify-evenly p-[2rem] overflow-y-auto"
>
    <div
        class="hidden md:absolute top-0 left-[2rem] w-[3rem] h-fit md:flex flex-col items-center basis-1/6"
    >
        <div class="h-[14rem] w-[1px] border-l-2 border-gray"></div>
        <a href="https://www.linkedin.com/in/dan-ngendahayo-6956b1193/">
            <Image
                src="/Linkedin.svg"
                alt="LinkdedIn link"
                width={30}
                height={30}
                format={"svg"}
            />
        </a>
        <a href="https://github.com/Dan925">
            <Image
                src="/Github.svg"
                alt="GitHub link"
                width={30}
                height={30}
                format={"svg"}
            />
        </a>
    </div>
    <div class="basis-1/3 flex flex-col px-[7rem] gap-[5rem]">
        <span>
            <h1 class="text-6xl">
                Dan <span class="text-accent">Ngendahayo</span><br />
            </h1>
            <h2 class="text-gray text-3xl">
                Making my life easier with software
            </h2>
        </span>
        <span class="flex">
            <a
                href="#contacts"
                class="bg-bgrd text-gray hover:text-white border-2 w-[10rem] h-[3rem] p-[.2rem] font-bold cursor-pointer flex items-center justify-center"
                >Contact me !!</a
            >
            <a
                href="/resume"
                class="bg-accent text-white w-[10rem] h-[3rem] p-[.2rem] font-bold cursor-pointer flex items-center justify-center"
                >Resume</a
            >
        </span>
    </div>
    <div class="basis-1/3 h-full flex flex-col items-center">
        <div class="relative w-[24rem] md:w-[34rem] h-[20rem] md:h-[32rem]">
            <Image
                class="w-[20rem] md:w-[29rem] z-0 absolute top-0 left-4 opacity-30"
                src="/prof.svg"
                alt="Hero Image"
                width={464}
                height={490}
                format={"svg"}
            />
            <Image
                class="absolute bottom-14 right-2 z-10"
                src="/lines.svg"
                alt="prof-lines"
                width={100}
                height={100}
                format={"png"}
            />
            <Image
                class="absolute top-2 left-0 z-10"
                src="/dots.svg"
                alt="prof-dots"
                width={100}
                height={100}
                format={"svg"}
            />
        </div>
        <div class="flex items-center gap-[2rem] z-0">
            <div class="bg-accent w-[15px] h-[15px]"></div>
            <p>Currently pursuing a software engineering degree at uOttawa</p>
        </div>
    </div>
</section>
